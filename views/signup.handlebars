<div class="row">
  <div class="col s12">
    <div class="row">  
      <h1><span class="fa fa-sign-in"></span> Sign up</h1>
      <form method="post" name="signup" class="col s12">
        <div class="input-field col s6">
          <input type="text" class="validate" id="email" />
          <p>Enter your email</p>
          <label for="email">Email</label>
        </div>
        <div class="input-field col s6">
          <input type="text" class="validate" id="password" />
          <p>Create a unique 8 character password</p>
          <label for="password">Password</label>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Sign up
          <i class="material-icons right">send</i>
        </button>
      </form>
    </div>
  </div>
  <p>Already have an account? <a href="/login">Log in</a></p>
</div>
