<script src="/users.js"></script>
<script src="/discussion.js"></script>

<div class="pageBody">
    <div class="profileHeader center-align">
        <form method="post">
            <h4>Username:</h4>
            <input type="text" name="userName" value="{{userName}}"><br>
            <h4>Email:</h4>
            <input type="email" name="email" value="{{email}}"><br>
            <h4>Password:</h4>
            <input type="password" name="password" value="{{password}}"><br>
            <h4>Bio:</h4>
            <input type="text" name="bio" value="{{bio}}"><br>
            <h4>Favorite Author:</h4>
            <input type="text" name="favAuthor" value="{{favAuthor}}"><br>
            <h4>Favorite Book:</h4>
            <input type="text" name="favBook" value="{{favBook}}"><br><br>
            <button class="center-align btn waves-effect waves-light indigo darken-4" type="submit" id="submitBtn">Update</button>
        </form>
        <br><br><br>
    </div>
</div>

