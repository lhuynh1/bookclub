<div class="pageBody">
  <div class="discheader center-align">
    <h3>Book Discussions</h3>
    <p class="rules" style="font-size:20px">Start a new discussion by creating a topic. 
      <br>Please include the name of the book.
    </p>
    <br>
    <a class="waves-effect waves-yellow btn indigo darken-4" href="/discussions/create">
      <i class="material-icons left">add_circle_outline</i>Start a New Topic</a>
  </div>
  <div class="divider first" style="margin-top:20px"></div>

  {{#each hbsDiscussions}}
  <div class="topicGroup center-align">
    <button class="waves-effect waves-red btn-small topicDelete indigo darken-4" data-discussion-id="{{id}}">Delete</button>
 
    <h4 class="topic">{{topic}}</h4>

    <a href="/discussions/{{id}}/comments" class="commentsBtn waves-effect waves-yellow btn-small indigo darken-4">Go to Comments</a>
  </div>
  <div class="divider"></div>
  {{/each}}
</div>

<tail>
    <script src="/js/comments.js"></script>
</tail>
