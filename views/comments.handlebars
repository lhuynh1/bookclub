<script src="/comments.js"></script>


<div class="pageBody">
  <div class="pageHeader">
    <h1>Comments</h1>
    <a class="waves-effect waves-light btn"><i class="material-icons left">add_circle_outline</i>Add a Comment</a>
    </button>
  </div>
  <br><br>
  <div class="divider"></div>

  {{#each hbsComments}}
  <div class="eachComment">
    <div class="row">
      <div class="col s4">
        <p class="userName">UserName: </p> 
      </div>
      <div class="col s8">
        <p class="commentTitle"><strong>{{title}}</strong></p>
      </div>      
    </div>

    <div class="divider"></div>
    
    <div class="section">
      <p class="commentContent">{{content}}</p>
      <button type="button" class="updateBtn">
        <a href="/comments/{{id}}">Edit</a>
      </button>
      <button type="button" class= "deleteBtn" data-comment-id="{{id}}">
        Delete
      </button>
    </div>
    
    <div class="timeStamp">
      {{createdAt}}
    </div>
  </div>
  {{/each}}
</div>
